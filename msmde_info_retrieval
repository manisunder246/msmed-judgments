   "source": [
    "def boolean_and(query_terms, inverted_index):\n",
    "    # Retrieve sets of documents for each query term\n",
    "    sets = [inverted_index.get(term, set()) for term in query_terms]\n",
    "    # Return the intersection of these sets\n",
    "    return set.intersection(*sets) if sets else set()\n",
    "\n",
    "def boolean_or(query_terms, inverted_index):\n",
    "    # Retrieve sets of documents for each query term\n",
    "    sets = [inverted_index.get(term, set()) for term in query_terms]\n",
    "    # Return the union of these sets\n",
    "    return set.union(*sets) if sets else set()\n"
   ]
  },
