    "def process_query(query, inverted_index, use_stemming=True):\n",
    "    query_terms = tokenize_and_stem(query, use_stemming)\n",
    "    # Assuming simple queries that can be handled with 'boolean_and'\n",
    "    # For more complex queries, you'll need additional parsing\n",
    "    return boolean_and(query_terms, inverted_index)\n",
    "\n",
    "\n",
    "# Process each query and display results\n",
    "for query in test_queries:\n",
    "    docs_with_stemming = process_query(query, inverted_index_with_stemming)\n",
    "    docs_without_stemming = process_query(query, inverted_index_without_stemming, use_stemming=False)\n",
    "\n",
    "    print(f\"Query: '{query}'\")\n",
    "    print(f\"Documents retrieved with stemming: {len(docs_with_stemming)}\")\n",
    "    print(f\"Documents retrieved without stemming: {len(docs_without_stemming)}\")\n",
