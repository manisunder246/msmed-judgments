   "cell_type": "code",
   "execution_count": 65,
   "id": "7962384d",
   "metadata": {},
   "outputs": [],
   "source": [
    "def process_and_subquery(subquery, inverted_index, use_stemming=True):\n",
    "    query_terms = tokenize_and_stem(subquery, use_stemming)\n",
    "    return boolean_and(query_terms, inverted_index)\n",
    "\n",
    "def process_or_subquery(subquery, inverted_index, use_stemming=True):\n",
    "    and_parts = subquery.split(\"and\")\n",
    "    and_results = [process_and_subquery(part.strip(), inverted_index, use_stemming) for part in and_parts]\n",
    "    return set.intersection(*and_results) if and_results else set()\n",
    "\n",
    "def process_complex_query(query, inverted_index, use_stemming=True):\n",
    "    or_parts = query.split(\"or\")\n",
    "    or_results = [process_or_subquery(part.strip(), inverted_index, use_stemming) for part in or_parts]\n",
    "    return set.union(*or_results) if or_results else set()\n",
    "\n",
    "# Test queries\n",
    "complex_queries = [\n",
    "    \"(Notwithstanding OR arguments) OR adjudicate\",\n",
    "    \"(writ petition OR claim petition or incumbent\",\n",
    "    \"(Arbitration AND Conciliation) AND consent\",\n",
    "    \"(MSMED Act OR Arbitration act) AND adjudicate\"\n",
    "]"
   ]
  },
